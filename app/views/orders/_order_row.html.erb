<div class="well">
  <div class="row">
    <div class="col-xs-8">
      <h4><%= product.name %></h4>
      <%= link_to image_tag(product.image.url(:med)), product.image.url %>
    </div>
    <div class="col-xs-4">

      <%= form_for order_item, remote: true do |f| %>
        <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency order_item.unit_price %></span></h4>
        <h4 class="text-right">Quantity: <span style="color: green"><%= order_item.quantity %></span></h4>
        <h4 class="text-right">Subtotal: <span style="color: green"><%= number_to_currency order_item.total_price %></span></h4>
      <% end %>
    </div>
  </div>
</div>