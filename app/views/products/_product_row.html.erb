
<div class="well">

  <div class="row">
    <div class="col-xs-12">
    <div class="col-xs-8">
      <h4><%= product.name %></small></h4>
    </div>

    <div class="col-xs-8">
      <%= form_for order_item,:html => {:multipart => true}, remote: true do |f| %>
      <h4 class="text-left">Unit Price: <span style="color: green"><%= number_to_currency product.price %></span></h4>

 

        <div class="input-group col-xs-1">
          
          <%= f.select :size,  options_for_select([['XS'], ['S'], ['M'], ['L'], ['XL'], ['2XL'], ['3XL']])%>
          
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>

          <%= link_to image_tag(product.image.url(:med)), product.image.url %>

          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Add to Cart", class: "btn btn-primary" %>
          
          </div>

          
        </div>
      <% end %>
    </div>
    </div>

  </div>
</div>