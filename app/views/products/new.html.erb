<h1 align="center">Add new product</h1>
<div class='row'>
  
<div class='col-xs-12'>
<%= form_for(@product, :html => {:multipart => true}) do |f| %>
<div class="form-group">
  <div class="control-label col-sm-3">
    <%= f.label :name %>
  </div>
  <div class="col-sm-8">
    <%= f.text_field :name, class: "form-control", placeholder: "Enter product name", autofocus: true %>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-sm-3">
    <%= f.label :price %>
  </div>
  <div class="col-sm-8">
    <%= f.number_field :price, class: "form-control", placeholder: "Enter price" %>
  </div>
</div>
<div class="form-group">
  <div class="control-label col-sm-3">
    <%= f.label :image %>
  </div>
  <div class="col-sm-8">
    <%= f.text_field :image, class: "form-control", placeholder: "Enter image url" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-0 col-sm-10">
    <%= f.submit("Add Item", class: 'btn btn-primary btn-lg') %>
  </div>
</div>
<% end %>
  <div class="col-xs-4 col-xs-offset-0">
   [<%= link_to "cancel", store_path %>] 
  </div>
</div>
</div>
